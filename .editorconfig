# EditorConfig:
https://EditorConfig.org/#download

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space

[*.js]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.scss]
indent_size = 2
